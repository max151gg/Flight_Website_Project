@using SkyPath_Models.Models
@using SkyPath_Models.ViewModel
@model BrowseViewModel
@{
    ViewData["Title"] = "HomePage";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}
@{
    var cityDict = (Dictionary<string, string>)ViewBag.CityDict;

    string NameOrUnknown(string id) =>
        (!string.IsNullOrEmpty(id) && cityDict != null && cityDict.ContainsKey(id))
            ? cityDict[id]
            : "Unknown";
}
<link rel="stylesheet" href="~/CSS/HomeCSS.css" />
<div class="content">
    <div class="hero">
        <h1>The best site to set up<br>your vacation</h1>
        <p>Statement for your product's tagline. This text should communicate your unique selling proposition to the reader.</p>
        <a class="btn-cta" href="http://localhost:5076/Guest/Browse">Find Your Flight Now</a>
    </div>
<div class="main-container">
    <!-- Search Section -->
        @{
            var discountedFlights = (Model?.flights ?? new List<Flight>())
            .Where(f => f != null)   // your threshold
            .OrderBy(f => f.Price)                    // optional: cheapest first
            .Take(5)
            .ToList();
        }

        <div class="flights-section">
            <p class="section-title">Cheapest Flights Available Right Now</p>

            <div class="flight-cards">
                @foreach (var flight in discountedFlights)
                {
                    <a asp-controller="Guest"
                       asp-action="Browse"
                       asp-route-openFlightId="@flight.Flight_Id"
                       class="flight-card-link">



                        <div class="flight-card">
                            <img class="flight-card-icon"
                                 src="~/images/destinations/@(flight.Arrival_Id)_1.jpg"
                                 onerror="this.onerror=null; this.src='/images/destinations/placeholder_1.jpg';"
                                 alt="Destination image" />


                            <div class="flight-card-title">
                                @NameOrUnknown(flight.Departure_Id)
                                →
                                @NameOrUnknown(flight.Arrival_Id)
                                - @flight.Price$
                            </div>
                        </div>

                    </a>
                }
            </div>
        </div>


    <!-- Content Layout -->
    <div class="content-layout">
        <!-- Sidebar -->
        <div class="signup-section" id="signup-section">
            <h2>Sign Up</h2>
            <p class="signup-subtitle">Signup now. Its free and takes less than a minute</p>
                
                <form asp-controller="Guest" asp-action="Register" method="post">
                <div class="form-group">
                    <input asp-for="User.User_FullName" type="text" placeholder="Full Name" required>
                </div>
                <div class="form-group">
                    <input asp-for="User.UserName" type="text" placeholder="UserName" required>
                </div>
                <div class="form-group">
                    <input asp-for="User.Email" type="email" placeholder="Email address" required>
                </div>
                <div class="form-group">
                    <input asp-for="User.Password" type="password" placeholder="Password" required>
                </div>
                <div class="form-group">
                    <input asp-for="User.User_Telephone" type="text" placeholder="Phone Number" required>
                </div>
                <div class="form-group">
                    <input asp-for="User.User_Adress" type="text" placeholder="Adress" required>
                </div>
                <div class="checkbox-group">
                    <input type="checkbox" id="terms">
                    <label for="terms">Notify me about recent discounts</label>
                </div>
                <div class="checkbox-group">
                    <input type="checkbox" id="agree" required>
                    <label for="agree">Agree with terms of service</label>
                </div>
                <div class="checkbox-group">
                        <label for="account">have an account already? <a href="http://localhost:5076/Guest/LoginHome#login-section">Log In</a></label>
                </div>
                <button type="submit" class="btn-submit">Sign Up</button>
            </form>
        </div>
    </div>
</div>