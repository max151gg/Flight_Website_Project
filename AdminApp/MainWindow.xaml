<Window x:Class="AdminApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Admin Panel"
        Height="700"
        Width="1350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Window.Resources>
        <Style x:Key="NavHyperlinkStyle" TargetType="Hyperlink">
            <Setter Property="TextDecorations" Value="{x:Null}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#00BFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <Style x:Key="ExitButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>


    </Window.Resources>


    <Grid>
        
        
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT BAR -->
        <Grid Grid.Column="0" Background="DimGray">
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="90"/>
            </Grid.RowDefinitions>

            <!-- Top header -->
            <Border Grid.Row="0" Margin="10" BorderBrush="White" BorderThickness="2" CornerRadius="6">
                <TextBlock Text="ADMIN"
                           Foreground="White"
                           FontSize="26"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Links -->
            <StackPanel Grid.Row="1" Margin="10,10,10,10">
                <TextBlock Margin="12" FontSize="20">
                    <Hyperlink Foreground="White" Style="{StaticResource NavHyperlinkStyle}" Click="Nav_Start_Click">Home</Hyperlink>
                </TextBlock>

                <TextBlock Margin="12" FontSize="20">
                    <Hyperlink Foreground="White" Style="{StaticResource NavHyperlinkStyle}" Click="Nav_Login_Click">Login</Hyperlink>
                </TextBlock>

                <!-- Add more later, same pattern -->
                <TextBlock Margin="12" FontSize="20">
                    <Hyperlink Foreground="White" Style="{StaticResource NavHyperlinkStyle}" Click="Nav_Flights_Click">Flights</Hyperlink>
                </TextBlock>

                <TextBlock Margin="12" FontSize="20">
                    <Hyperlink Foreground="White" Style="{StaticResource NavHyperlinkStyle}" Click="Nav_Tickets_Click">Tickets</Hyperlink>
                </TextBlock>

                <TextBlock Margin="12" FontSize="20">
                    <Hyperlink Foreground="White" Style="{StaticResource NavHyperlinkStyle}" Click="Nav_Tickets_Click">Discounts</Hyperlink>
                </TextBlock>

                <TextBlock Margin="12" FontSize="20">
                    <Hyperlink Foreground="White" Style="{StaticResource NavHyperlinkStyle}" Click="Nav_Tickets_Click">Announcements</Hyperlink>
                </TextBlock>

                <TextBlock Margin="12" FontSize="20">
                    <Hyperlink Foreground="White" Style="{StaticResource NavHyperlinkStyle}" Click="Nav_Tickets_Click">Users</Hyperlink>
                </TextBlock>
            </StackPanel>

            <!-- Bottom exit -->
            <StackPanel Grid.Row="2" Margin="10">
                <Button Content="Exit"
            Height="45"
            FontSize="18"
            Background="Red"
            Foreground="White"
                        Style="{StaticResource ExitButtonStyle}"
            Click="Nav_Exit_Click"/>
            </StackPanel>
        </Grid>

        <!-- RIGHT CONTENT -->
        <Frame x:Name="MainFrame"
               Grid.Column="1"
               NavigationUIVisibility="Hidden"
               Background="White"/>
    </Grid>
</Window>