<Window x:Class="AdminApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Admin Panel"
        Height="700"
        Width="1350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">


    <Window.Resources>
        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="0"
                                CornerRadius="8"
                                Margin="10,2">
                            <ContentPresenter HorizontalAlignment="Left" 
                                            VerticalAlignment="Center"
                                            Margin="15,0,0,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E8E8E8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Sidebar Button Style -->
        <Style x:Key="ActiveSidebarButtonStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Logout Button Style -->
        <Style x:Key="LogoutButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#DC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C82333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Main Layout: Sidebar + Content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" 
                Background="White" 
                BorderThickness="0,0,1,0" 
                BorderBrush="#E0E0E0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo/Header -->
                <Border Grid.Row="0" 
                        Background="#333333" 
                        Padding="20,25">
                    <StackPanel>
                        <TextBlock Text="SkyPath" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Admin Dashboard" 
                                   FontSize="12" 
                                   Foreground="#CCCCCC"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Navigation Menu -->
                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,20,0,0">
                    <StackPanel>
                        <!-- Dashboard -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                x:Name="btnDashboard"
                                Click="NavigateToDashboard">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="Dashboard" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Separator -->
                        <Border Height="1" 
                                Background="#E0E0E0" 
                                Margin="20,15"/>

                        <!-- Section Title -->
                        <TextBlock Text="MANAGEMENT" 
                                   FontSize="11" 
                                   FontWeight="Bold"
                                   Foreground="#999999"
                                   Margin="20,10,0,10"
                                   Padding="5,0"/>

                        <!-- Flights -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                x:Name="btnFlights"
                                Click="NavigateToFlights">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✈️" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="Flights" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Users -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                x:Name="btnUsers"
                                Click="NavigateToUsers">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="Users" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Tickets -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                x:Name="btnTickets"
                                Click="NavigateToTickets">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🎫" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="Tickets" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Discounts -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                x:Name="btnDiscounts"
                                Click="NavigateToDiscounts">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💰" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="Discounts" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Announcements -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                x:Name="btnAnnouncements"
                                Click="NavigateToAnnouncements">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📢" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="Announcements" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Separator -->
                        <Border Height="1" 
                                Background="#E0E0E0" 
                                Margin="20,15"/>

                        <!-- Section Title -->
                        <TextBlock Text="SYSTEM" 
                                   FontSize="11" 
                                   FontWeight="Bold"
                                   Foreground="#999999"
                                   Margin="20,10,0,10"
                                   Padding="5,0"/>

                        <!-- Settings -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                x:Name="btnSettings"
                                Click="NavigateToSettings">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙️" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="Settings" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Reports -->
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                x:Name="btnReports"
                                Click="NavigateToReports">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📈" FontSize="18" Margin="0,0,12,0"/>
                                <TextBlock Text="Reports" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- User Info & Logout -->
                <Border Grid.Row="2" 
                        Background="#F8F9FA" 
                        Padding="20"
                        BorderThickness="0,1,0,0"
                        BorderBrush="#E0E0E0">
                    <StackPanel>
                        <!-- User Info -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Ellipse Width="40" Height="40" Fill="#667EEA"/>
                            <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                <TextBlock x:Name="txtAdminName" 
                                           Text="Admin User" 
                                           FontWeight="SemiBold"
                                           FontSize="13"
                                           Foreground="#333333"/>
                                <TextBlock Text="Administrator" 
                                           FontSize="11"
                                           Foreground="#999999"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Logout Button -->
                        <Button Style="{StaticResource LogoutButtonStyle}"
                                Content="Logout"
                                Click="LogoutButton_Click"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Border Grid.Column="1" 
                Background="#F5F5F5">
            <Frame x:Name="MainFrame" 
                   NavigationUIVisibility="Hidden"
                   Background="Transparent"/>
        </Border>
    </Grid>
</Window>