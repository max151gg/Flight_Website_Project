<UserControl x:Class="AdminApp.UserControls.AnnouncementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#F5F5F5">

    <UserControl.Resources>
        <!-- Input Style -->
        <Style x:Key="ModernInputStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="5,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#999999"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#667EEA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DatePicker Style -->
        <Style x:Key="ModernDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Height" Value="42"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="InputLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Create Button Style -->
        <Style x:Key="CreateButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#667EEA" Offset="0"/>
                        <GradientStop Color="#764BA2" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Delete Button Style -->
        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#DC3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C82333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Filter Button Style -->
        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#667EEA"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Clear Filter Button Style -->
        <Style x:Key="ClearFilterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F8F9FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White" 
                Padding="30,25"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0">
            <StackPanel>
                <TextBlock Text="Announcements Management" 
                           FontSize="28" 
                           FontWeight="Bold"
                           Foreground="#333333"/>
                <TextBlock Text="Create and manage system announcements" 
                           FontSize="14"
                           Foreground="#999999"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>




        <!-- Everything below the header scrolls together -->
        <ScrollViewer Grid.Row="1"
              VerticalScrollBarVisibility="Auto"
              Padding="0,0,0,20">

            <StackPanel>

                <!-- Create Announcement Form -->
                <Border Background="White"
                Margin="30,20,30,0"
                CornerRadius="12"
                Padding="30">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000"
                                  Direction="270"
                                  ShadowDepth="2"
                                  BlurRadius="10"
                                  Opacity="0.08"/>
                    </Border.Effect>

                    <!-- Create Announcement Form -->



                    <StackPanel>
                        <TextBlock Text="Create New Announcement" 
                                FontSize="18"
                                FontWeight="Bold"
                                Foreground="#333333"
                                Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Title -->
                            <StackPanel Grid.Column="0" Grid.Row="0">
                                <TextBlock Text="TITLE" 
                          Style="{StaticResource InputLabelStyle}"/>
                                <TextBox x:Name="txtTitle"
                        Style="{StaticResource ModernInputStyle}"/>
                            </StackPanel>

                            <!-- Announcement Date -->
                            <StackPanel Grid.Column="2" Grid.Row="0">
                                <TextBlock Text="DATE" 
                          Style="{StaticResource InputLabelStyle}"/>
                                <DatePicker x:Name="dpAnnouncementDate"
                           Style="{StaticResource ModernDatePickerStyle}"/>
                            </StackPanel>

                            <!-- User ID -->
                            <StackPanel Grid.Column="4" Grid.Row="0">
                                <TextBlock Text="USER ID (Optional)" 
                          Style="{StaticResource InputLabelStyle}"/>
                                <TextBox x:Name="txtUserId"
                        Style="{StaticResource ModernInputStyle}"/>
                            </StackPanel>

                            <!-- Content (Full Width) -->
                            <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="5" Margin="0,15,0,0">
                                <TextBlock Text="CONTENT" 
                          Style="{StaticResource InputLabelStyle}"/>
                                <TextBox x:Name="txtContent"
                        Style="{StaticResource ModernInputStyle}"
                        Height="100"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"
                        VerticalContentAlignment="Top"
                        Padding="12,10"/>
                            </StackPanel>
                        </Grid>

                        <!-- Create Button -->
                        <Button Content="Create Announcement"
                                Style="{StaticResource CreateButtonStyle}"
                                HorizontalAlignment="Right"
                                Margin="0,20,0,0"
                                Click="CreateAnnouncement_Click"/>
                    </StackPanel>
                </Border>

                <!-- Filter Section -->
                <Border Background="White"
                    Margin="30,15,30,0"
                    CornerRadius="12"
                    Padding="25">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000"
                          Direction="270"
                          ShadowDepth="2"
                          BlurRadius="10"
                          Opacity="0.08"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                            Text="Filter by User ID:"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="#666666"
                            VerticalAlignment="Center"/>

                        <TextBox Grid.Column="2"
                            x:Name="txtFilterUserId"
                            Style="{StaticResource ModernInputStyle}"
                            Height="42"/>

                        <Button Grid.Column="4"
                            Content="Apply Filter"
                            Style="{StaticResource FilterButtonStyle}"
                            Click="ApplyFilter_Click"/>

                        <Button Grid.Column="6"
                            Content="Clear Filter"
                            Style="{StaticResource ClearFilterButtonStyle}"
                            Click="ClearFilter_Click"/>

                        <TextBlock Grid.Column="7"
                            x:Name="txtFilterStatus"
                            Text=""
                            FontSize="13"
                            Foreground="#667EEA"
                            FontStyle="Italic"
                            VerticalAlignment="Center"
                            Margin="20,0,0,0"/>
                    </Grid>
                </Border>


                <!-- Announcements List -->
                <StackPanel Margin="30,20,30,30">
                    <ItemsControl x:Name="AnnouncementsList"
                        ItemsSource="{Binding}">

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White"
                                    CornerRadius="12"
                                    Margin="0,0,0,15"
                                    Padding="25">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#000000"
                                      Direction="270"
                                      ShadowDepth="2"
                                      BlurRadius="10"
                                      Opacity="0.08"/>
                                    </Border.Effect>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <!-- Header -->
                                            <Grid Margin="0,0,0,12">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Title}"
                                                        FontSize="18"
                                                        FontWeight="Bold"
                                                        Foreground="#333333"
                                                        Validation.ErrorTemplate="{x:Null}"/>

                                                    <Border CornerRadius="4"
                                                        Padding="6,3"
                                                        Margin="12,2,0,0">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Setter Property="Background" Value="#F5576C"/>
                                                                <Style.Triggers>
                                                                    <!-- user_Id == 0 => public -->
                                                                    <DataTrigger Binding="{Binding User_Id}" Value="0">
                                                                        <Setter Property="Background" Value="#667EEA"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>

                                                        <TextBlock FontSize="11"
                                                            FontWeight="SemiBold"
                                                            Foreground="White">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Text" Value="👤 User Specific"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding User_Id}" Value="0">
                                                                            <Setter Property="Text" Value="📢 System Wide"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        
                                                    </Border>
                                                    <Border Background="#333333"
                                                        CornerRadius="4"
                                                        Padding="8,4"
                                                        Margin="10,5,0,0">
                                                        <TextBlock Text="{Binding Announcement_Id, StringFormat=ID: {0}}"
                                                            FontSize="11"
                                                            FontWeight="SemiBold"
                                                            Foreground="White"/>
                                                    </Border>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <TextBlock Text="📅 " FontSize="14" Foreground="#999999" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding Announcement_Date}"
                                                        FontSize="13"
                                                        Foreground="#999999"
                                                        VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Content -->
                                            <TextBlock Text="{Binding Content}"
                                                FontSize="14"
                                                Foreground="#666666"
                                                TextWrapping="Wrap"
                                                LineHeight="22"
                                                Margin="0,0,0,12"/>

                                            <!-- User ID -->
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="User ID: " FontSize="12" Foreground="#999999"/>
                                                <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="#667EEA">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="{Binding User_Id}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding User_Id}" Value="0">
                                                                    <Setter Property="Text" Value="All Users"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Delete -->
                                        <Button Grid.Column="1"
                                            Content="Delete"
                                            Style="{StaticResource DeleteButtonStyle}"
                                            VerticalAlignment="Center"
                                            Margin="20,0,0,0"
                                            Tag="{Binding}"
                                            Click="DeleteAnnouncement_Click"
                                            Validation.ErrorTemplate="{x:Null}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>