<Page x:Class="AdminApp.UserControls.FlightPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:AdminApp"
      xmlns:conver="clr-namespace:AdminApp"
      xmlns:conv="clr-namespace:AdminApp.Converters"



      Background="#F5F5F5"
      Title="Flights Management">

    <Page.Resources>
        
        <local:UrlConverter x:Key="urlConverter"/>
        <conv:CityIdToNameConverter x:Key="cityNameConverter"/>


        <!-- Action Button Style (Update/Delete) -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Add Flight Button Style -->
        <Style x:Key="AddFlightButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#667EEA" Offset="0"/>
                        <GradientStop Color="#764BA2" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="➕ " FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="White" 
                Padding="30,25"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0">
            <Grid>
                <StackPanel>
                    <TextBlock Text="Flights Management" 
                               FontSize="28" 
                               FontWeight="Bold"
                               Foreground="#333333"/>
                    <TextBlock Text="Manage all flight schedules and information" 
                               FontSize="14"
                               Foreground="#999999"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Search Box (Right aligned) -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center">
                    <TextBox Width="250" 
                             Height="38"
                             Padding="12,8"
                             FontSize="13"
                             BorderBrush="#E0E0E0"
                             BorderThickness="1"
                             Background="White"
                             x:Name="txtSearch"
                             TextChanged="TxtSearch_TextChanged">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBlock Text="🔍" 
                               FontSize="16"
                               Margin="-35,0,15,0"
                               VerticalAlignment="Center"
                               Foreground="#999999"
                               IsHitTestVisible="False"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Flights List -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Visible"
                     Padding="30,20">
            <ItemsControl x:Name="FlightsList" ItemsSource="{Binding}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White"
                    CornerRadius="12"
                    Margin="0,0,0,15"
                    Padding="20">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000"
                                      Direction="270"
                                      ShadowDepth="2"
                                      BlurRadius="10"
                                      Opacity="0.08"/>
                            </Border.Effect>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Image placeholder -->
                                <Border Grid.Column="0"
                            Width="120"
                            Height="90"
                            CornerRadius="8"
                            Background="#E0E0E0"
                            Margin="0,0,20,0">
                                   <Image Source="{Binding imageUrl, Converter={StaticResource urlConverter}}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                                </Border>

                                <!-- Flight Details -->
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Route + airline -->
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                        <TextBlock Text="{Binding Departure_Id, Converter={StaticResource cityNameConverter}}"
                                            FontSize="24"
                                            FontWeight="Bold"
                                            Foreground="#333333"/>
                                        <TextBlock Text="→"
                                            FontSize="20"
                                            Foreground="#999999"
                                            Margin="15,0"/>
                                        <TextBlock Text="{Binding Arrival_Id, Converter={StaticResource cityNameConverter}}"
                                            FontSize="24"
                                            FontWeight="Bold"
                                            Foreground="#333333"/>

                                        <Border Background="#667EEA"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            Margin="15,5,0,0">
                                            <TextBlock Text="{Binding Airline}"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="White"/>
                                        </Border>
                                        <Border Background="#333333"
                                            CornerRadius="4"
                                            Padding="8,4"
                                            Margin="10,5,0,0">
                                            <TextBlock Text="{Binding Flight_Id, StringFormat=ID: {0}}"
                                                FontSize="11"
                                                FontWeight="SemiBold"
                                                Foreground="White"/>
                                        </Border>
                                    </StackPanel>

                                    <!-- Info -->
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Departure -->
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="DEPARTURE"
                                           FontSize="10"
                                           Foreground="#999999"
                                           Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding Departure_Date}"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="#333333"/>
                                            <TextBlock Text="{Binding Departure_Time}"
                                           FontSize="12"
                                           Foreground="#666666"
                                           Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <!-- Arrival -->
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="ARRIVAL"
                                           FontSize="10"
                                           Foreground="#999999"
                                           Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding Arrival_Date}"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="#333333"/>
                                            <TextBlock Text="{Binding Arrival_Time}"
                                           FontSize="12"
                                           Foreground="#666666"
                                           Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <!-- Price -->
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="PRICE"
                                           FontSize="10"
                                           Foreground="#999999"
                                           Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding Price, StringFormat={}{0:C}}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#667EEA"/>
                                        </StackPanel>

                                        <!-- Seats -->
                                        <StackPanel Grid.Column="3">
                                            <TextBlock Text="SEATS"
                                           FontSize="10"
                                           Foreground="#999999"
                                           Margin="0,0,0,4"/>
                                            <TextBlock Text="{Binding Seats_Available}"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="#333333"/>
                                            <TextBlock Text="Available"
                                           FontSize="11"
                                           Foreground="#28A745"
                                           Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>

                                <!-- Buttons -->
                                <StackPanel Grid.Column="2"
                                VerticalAlignment="Center"
                                Margin="20,0,0,0">
                                    <Button Content="Update"
                                Style="{StaticResource ActionButtonStyle}"
                                Background="#667EEA"
                                Foreground="White"
                                Width="90"
                                Tag="{Binding}"
                                Click="UpdateFlight_Click"/>
                                    <Button Content="Delete"
                                Style="{StaticResource ActionButtonStyle}"
                                Background="#DC3545"
                                Foreground="White"
                                Width="90"
                                Margin="5,10,5,0"
                                Tag="{Binding}"
                                Click="DeleteFlight_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Add Flight Button (Bottom) -->
        <Border Grid.Row="2" 
                Background="White" 
                Padding="30,20"
                BorderThickness="0,1,0,0"
                BorderBrush="#E0E0E0">
            <Button Content="Add New Flight"
                   Style="{StaticResource AddFlightButtonStyle}"
                   HorizontalAlignment="Center"
                   Click="AddFlight_Click"/>
        </Border>
    </Grid>
</Page>