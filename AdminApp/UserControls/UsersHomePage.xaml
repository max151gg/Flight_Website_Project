<UserControl x:Class="AdminApp.UserControls.UsersHomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F5F5">

    <UserControl.Resources>
        <Style x:Key="FilterButtonStyle" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border"
                                Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Padding="20,10"
                                Cursor="Hand">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#667EEA" Offset="0"/>
                                            <GradientStop Color="#764BA2" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#667EEA"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background" Value="#F8F9FA"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel>
            <Border Background="White" Padding="30,25" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
                <StackPanel>
                    <TextBlock Text="Users Management" FontSize="28" FontWeight="Bold" Foreground="#333333"/>
                    <TextBlock Text="Manage user accounts and permissions" FontSize="14" Foreground="#999999" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Grid Margin="30,20,30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="20">
                    <Border.Effect><DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" BlurRadius="10" Opacity="0.08"/></Border.Effect>
                    <StackPanel>
                        <TextBlock Text="ðŸ‘¥" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Total Users" FontSize="13" Foreground="#999999" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtTotalUsers" Text="0" FontSize="32" FontWeight="Bold" Foreground="#333333" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="20">
                    <Border.Effect><DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" BlurRadius="10" Opacity="0.08"/></Border.Effect>
                    <StackPanel>
                        <TextBlock Text="â­" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Administrators" FontSize="13" Foreground="#999999" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtTotalAdmins" Text="0" FontSize="32" FontWeight="Bold" Foreground="#667EEA" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="4" Background="White" CornerRadius="12" Padding="20">
                    <Border.Effect><DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" BlurRadius="10" Opacity="0.08"/></Border.Effect>
                    <StackPanel>
                        <TextBlock Text="ðŸ‘¤" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Regular Users" FontSize="13" Foreground="#999999" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtRegularUsers" Text="0" FontSize="32" FontWeight="Bold" Foreground="#28A745" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="6" Background="White" CornerRadius="12" Padding="20">
                    <Border.Effect><DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" BlurRadius="10" Opacity="0.08"/></Border.Effect>
                    <StackPanel>
                        <TextBlock Text="ðŸ“ˆ" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Shown" FontSize="13" Foreground="#999999" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtNewUsers" Text="0" FontSize="32" FontWeight="Bold" Foreground="#F5576C" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Border Background="White" Margin="30,15,30,0" CornerRadius="12" Padding="20">
                <Border.Effect><DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" BlurRadius="10" Opacity="0.08"/></Border.Effect>
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Filter Users:" FontSize="14" FontWeight="SemiBold" Foreground="#666666" VerticalAlignment="Center" Margin="0,0,20,0"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="All Users" Style="{StaticResource FilterButtonStyle}" x:Name="rbAll" IsChecked="True" Checked="FilterChanged" GroupName="UserFilter"/>
                            <RadioButton Content="Admins Only" Style="{StaticResource FilterButtonStyle}" x:Name="rbAdmins" Checked="FilterChanged" GroupName="UserFilter" BorderThickness="0,1,1,1"/>
                            <RadioButton Content="Regular Users" Style="{StaticResource FilterButtonStyle}" x:Name="rbRegular" Checked="FilterChanged" GroupName="UserFilter" BorderThickness="0,1,1,1"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="ðŸ”" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Width="250" Height="38" Padding="12,8" FontSize="13" BorderBrush="#E0E0E0" BorderThickness="1" Background="White" x:Name="txtSearch" TextChanged="TxtSearch_TextChanged" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <StackPanel Margin="30,20,30,30">
                <ItemsControl x:Name="UsersList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="12" Margin="0,0,0,15" Padding="20">
                                <Border.Effect><DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" BlurRadius="10" Opacity="0.08"/></Border.Effect>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Width="80" Height="80" CornerRadius="40" Background="#E0E0E0" VerticalAlignment="Top" ClipToBounds="True">
                                        <Image Stretch="UniformToFill" Source="{Binding User_Image}"/>
                                    </Border>

                                    <Grid Grid.Column="1" Margin="20,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                            <TextBlock Text="{Binding User_FullName}" FontSize="20" FontWeight="Bold" Foreground="#333333" VerticalAlignment="Center"/>
                                            <Border CornerRadius="4" Padding="8,4" Margin="12,0,0,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#28A745"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Role_Id}" Value="0">
                                                                <Setter Property="Background" Value="#667EEA"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock FontSize="11" FontWeight="Bold" Foreground="White">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="ðŸ‘¤ USER"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Role_Id}" Value="0">
                                                                    <Setter Property="Text" Value="â­ ADMINISTRATOR"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </StackPanel>

                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,15,10">
                                                <TextBlock Text="USERNAME" FontSize="10" Foreground="#999999" Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding UserName}" FontSize="13" FontWeight="SemiBold" Foreground="#333333"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,15,10">
                                                <TextBlock Text="USER ID" FontSize="10" Foreground="#999999" Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding User_Id, StringFormat=#USER_{0}}" FontSize="13" FontWeight="SemiBold" Foreground="#333333"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="2" Grid.Row="0" Margin="0,0,0,10">
                                                <TextBlock Text="EMAIL" FontSize="10" Foreground="#999999" Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding Email}" FontSize="13" FontWeight="SemiBold" Foreground="#333333"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,15,0">
                                                <TextBlock Text="PHONE" FontSize="10" Foreground="#999999" Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding User_Telephone}" FontSize="13" FontWeight="SemiBold" Foreground="#333333"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2">
                                                <TextBlock Text="ADDRESS" FontSize="10" Foreground="#999999" Margin="0,0,0,4"/>
                                                <TextBlock Text="{Binding User_Adress}" FontSize="13" FontWeight="SemiBold" Foreground="#333333" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>

                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                        <Button Style="{StaticResource ActionButtonStyle}" Foreground="White" Click="ToggleRole_Click" Tag="{Binding}" Background="#667EEA">
                                            <Button.Content>
                                                <TextBlock>
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Promote to Admin"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Role_Id}" Value="0">
                                                                    <Setter Property="Text" Value="Demote to User"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Button.Content>
                                        </Button>

                                        <Button Content="Delete User" Style="{StaticResource ActionButtonStyle}" Background="#DC3545" Foreground="White" Margin="5,10,5,0" Click="DeleteUser_Click" Tag="{Binding}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
