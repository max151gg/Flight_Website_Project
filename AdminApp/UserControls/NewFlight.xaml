<UserControl x:Class="AdminApp.UserControls.NewFlight"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdminApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas>
        <Label x:Name="label"
               Content="Flight Number" 
               Canvas.Left="236"
               Canvas.Top="15" RenderTransformOrigin="2.485,0.189" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label x:Name="label1"
               Content="AirLine"
               Canvas.Left="236"
               Canvas.Top="64" 
               Width="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label x:Name="label2" Content="Flight Images" Canvas.Left="45" Canvas.Top="28"/>
        <Border Canvas.Left="48" Canvas.Top="52"
                BorderThickness="1" BorderBrush="Black">
            <Image x:Name="image" Height="153"  Width="145"/>
        </Border>
        <Button x:Name="button" Content="Select Flight images" Canvas.Left="51" Canvas.Top="220" HorizontalAlignment="Left" VerticalAlignment="Top" Width="143" Height="35"/>
        <Label x:Name="label3" Content="Departure" Canvas.Left="272" Canvas.Top="171" HorizontalAlignment="Center" VerticalAlignment="Top" Width="94"/>
        <ListBox x:Name="listBox"
                 SelectionMode="Multiple"
                 Height="82" Width="150" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Top="198" Canvas.Left="244" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="label3_Copy" Content="Arrival" Canvas.Left="441" Canvas.Top="171" Width="94" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <ListBox x:Name="listBox_Copy"
            SelectionMode="Multiple"
            Height="83" Width="152" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Top="197" Canvas.Left="412" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="button_Copy" Content="Add Flight" Canvas.Left="243" Canvas.Top="399" Width="152" Height="36" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" Canvas.Left="237" TextWrapping="Wrap" Text="TextBox" Canvas.Top="41" Width="332" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="textBox_Copy" 
                 
                  AcceptsReturn="True" 
                 Canvas.Left="236"
                 TextWrapping="Wrap" Text="TextBox" Canvas.Top="90" Width="334" HorizontalAlignment="Center" VerticalAlignment="Top" Height="20"/>
        <Button x:Name="button_Copy1" Content="Close" Canvas.Left="412" Canvas.Top="399" Width="152" Height="36" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="label1_Copy"
            Content="Price"
            Canvas.Left="269"
            Canvas.Top="120" 
            Width="100" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_Copy1" 
                 
            AcceptsReturn="True" 
            Canvas.Left="266"
            TextWrapping="Wrap" Text="TextBox" Canvas.Top="146" Width="106" Height="20" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_Copy2" 
                 
            AcceptsReturn="True" 
            Canvas.Left="434"
            TextWrapping="Wrap" Text="TextBox" Canvas.Top="146" Width="108" Height="20" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="label1_Copy1"
            Content="Seats Available"
            Canvas.Left="438"
            Canvas.Top="120" 
            Width="100" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_Copy3" 
                 
            AcceptsReturn="True" 
            Canvas.Left="264"
            TextWrapping="Wrap" Text="TextBox" Canvas.Top="308" Width="106" Height="20" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_Copy4" 
                 
            AcceptsReturn="True" 
            Canvas.Left="441"
            TextWrapping="Wrap" Text="TextBox" Canvas.Top="308" Width="106" Height="20" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_Copy5" 
                 
            AcceptsReturn="True" 
            Canvas.Left="266"
            TextWrapping="Wrap" Text="TextBox" Canvas.Top="354" Width="106" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_Copy6" 
                 
            AcceptsReturn="True" 
            Canvas.Left="441"
            TextWrapping="Wrap" Text="TextBox" Canvas.Top="354" Width="106" Height="20" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="label3_Copy1" Content="Arrival Time" Canvas.Left="447" Canvas.Top="285" Width="94" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="label3_Copy2" Content="Departure Time" Canvas.Left="270" Canvas.Top="285" Width="94" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="label3_Copy3" Content="Departure Date" Canvas.Left="270" Canvas.Top="328" Width="94" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="label3_Copy4" Content="Arrival Date" Canvas.Left="447" Canvas.Top="328" Width="94" HorizontalAlignment="Left" VerticalAlignment="Top"/>

    </Canvas>
</UserControl>
